<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/pswdcateStyle.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
</head>
<body>
    <%- include('../partials/heading.ejs'); %>
    <%- include('../partials/header.ejs');%>
    <br>
    <br>
    <div class="form" style="width: 400px;">
        <div class="navbar">
            <h3>Add New Password</h3>
        </div>
        <hr>
        <form action="/add_new_password" method="post">
            <% if(success!=''){%>
                <p style="color: green;"><%= success %></p>
                <%}%>
            <div class="namefield" style="width: 150px;">
                <label for="pswdcat">Password Category</label>
            </div>
            <div class="inputfield">
                <select name="category">
                    <option value="">Choose Password Category</option>
                    <% if(records.length>0){
                        records.forEach(function(row){ %>
                    <option value="<%= row.password_category %>"><%= row.password_category %></option>
                        <%})}%>
                </select>
            </div>
            <br>
            <br>
            <div class="namefield" style="width: 150px;">
                <label for="project">Project Name</label>
            </div>
            <div class="inputfield">
                <input type="text" name="project" id="project" placeholder="Enter Project Name">
            </div>
            <br>
            <br>
            <div class="namefield" style="width: 150px;">
                <label for="pswd">Password Details</label>
            </div>
            <div class="inputfield">
                <textarea name="pswddetails" rows="4" cols="21" placeholder="Enter Password Details"></textarea>
            </div>
            <br>
            <br>
            <hr>
            <div class="inputfield">
                <input id="button" type="submit" value="Add New Password">
            </div>
            <br>
            <a href="/password_category">View all Categories</a>
        </form>
    </div>
    <br>
    <br>
    <%- include('../partials/footer.ejs');%>
</body>
</html>